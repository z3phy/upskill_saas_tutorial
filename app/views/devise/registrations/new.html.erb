<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <div class="text-center">
          <% if params[:plan] == '2' %>
              <h2>Pro Membership</h2>
              <h5>Sign up for the Pro account for $10/month to get access to the community and contact information!</h5>
          <% else %>
              <h2>Basic Membership</h2>
              <h5>Sign up for free and get basic access to the community</h5>
          <% end %>
      </div>

      <div class="well">

        <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
